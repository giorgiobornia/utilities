  il <A =
href=3D"http://xoomer.virgilio.it/roberto-ricci/C/ascii.htm">codice=20
  ASCII</A> di un carattere introdotto da tastiera. <PRE =
style=3D"BACKGROUND: silver">#include &lt;stdio.h&gt;

void main(){
	 char C,CM;
	 printf("Introduci un carattere:  ");
	 scanf("%c",&amp;C);
	 printf("\nIl codice ASCII del carattere '%c' =E8 %d\n",C,C);
	 if (C &gt;=3D 'a' &amp;&amp; C&lt;=3D'z'){
		 CM =3D C - ('a' - 'A');
		 printf("Il maiuscolo '%c' ha codice ASCII  %d\n",CM,CM);
	 } else {
		 if (C &gt;=3D 'A' &amp;&amp; C&lt;=3D'Z'){
			 CM =3D C - ('A' - 'a');
			 printf("Il minuscolo '%c' ha codice ASCII  %d\n",CM,CM);
		 }
	 }
}
</PRE>
